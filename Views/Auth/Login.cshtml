@model AuthViewModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="bg-light flex-column p-5">
        <form class="d-flex flex-column align-items-center" asp-action="Login" asp-controller="Auth" method="post">
            <h4>Войти в аккаунт</h4>
            <label>Имя пользователя</label>
            <input class="form-control mx-auto m-2" type="text" asp-for="@Model.UserName" maxlength="30" />
            <label>Пароль</label>
            <input class="form-control mx-auto m-2" type="password" asp-for="@Model.Password" />
            <input type="submit" class="btn btn-primary mx-auto" value="Войти в аккаунт" />
            <div asp-validation-summary="All"></div>
        </form>

        <a class="mx-auto " asp-action="Register" asp-controller="Auth">Зарегистрироваться</a>
    </div>
</div>


@section scripts
{
    @* Скрипты для валидации инпутов *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}
